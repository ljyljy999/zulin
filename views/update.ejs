    <div class="content-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="page-head-line">修改学生</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-1">
                    <p>学号：</p>
                </div>
                <div class="col-md-5">
                    <p><input type="text" class="form-control" name="sid" value="<%= info.sid %>" disabled></p>
                    <div class="alert alert-danger" role="alert" id="sid_tip" style="display:none;">学号已经存在，请检查！</div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-1">
                    <p>姓名：</p>
                </div>
                <div class="col-md-5">
                    <p>
                        <input type="text" class="form-control" name="yonghuming" value="<%= info.yonghuming %>"></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-1">
                    <p>电话：</p>
                </div>
                <div class="col-md-5">
                    <p>
                        <input type="text" class="form-control" name="dianhua" value="<%= info.dianhua %>"></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-1">
                    <p>住址：</p>
                </div>
                <div class="col-md-5">
                    <p>
                        <input type="text" class="form-control" name="dizhi" value="<%= info.dizhi %>"></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-1">
                    <p>身份证：</p>
                </div>
                <div class="col-md-5">
                    <p>
                        <input type="text" class="form-control" name="shenfengzheng" value="<%= info.shenfengzheng %>"></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-1">
                    <p>驾照：</p>
                </div>
                <div class="col-md-5">
                    <p>
                        <input type="text" class="form-control" name="jiazhao" value="<%= info.jiazhao %>"></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-5">
                    <button class="btn btn-success" id="btn">提交</button>
                </div>
            </div>
        </div>
        <!--  end  Context Classes  --> </div>
</div>
<script type="text/javascript" src="/js/jquery.min.js"></script>
<script type="text/javascript">
    //点击提交按钮的时候做的事情
    $("#btn").click(function(){
        var  sid = parseInt($("input[name=sid]").val());

        $.post("/kerenchaxun/" + sid,{
            yonghuming : $("input[name=yonghuming]").val(),
            dianhua : parseInt($("input[name=dianhua]").val()),
            dizhi : $("input[name=dizhi]").val(),
            shenfengzheng : $("input[name=shenfengzheng]").val(),
            jiazhao : $("input[name=jiazhao]").val()
        },function(data){
            if(data.result == 1){
                alert("修改成功！");
                window.location = "/kerenchaxun";
            }else{
                alert("服务器错误！请联系管理员，怎么联系我也不知道！");
            }
        })
    });
</script>
 

