                        <p>
                            <input type="text" class="form-control" name="shenfengzheng">
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-1">
                        <p>
                            驾照：
                        </p>
                    </div>
                    <div class="col-md-5">
                        <p>
                            <input type="text" class="form-control" name="jiazhao">
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-1">

                    </div>
                    <div class="col-md-5">
                        <button class="btn btn-success" id="btn">提交</button>
                    </div>
                </div>
        </div>
        <!--  end  Context Classes  --> </div>
</div>
<script type="text/javascript" src="/js/jquery.min.js"></script>
<script type="text/javascript">
    //点击提交按钮的时候做的事情
    $("#btn").click(function(){
        $.post("/dokerenchaxun",{
            sid : parseInt($("input[name=sid]").val()),
            yonghuming : $("input[name=yonghuming]").val(),
            dianhua : parseInt($("input[name=dianhua]").val()),
            dizhi : $("input[name=dizhi]").val(),
            shenfengzheng : $("input[name=shenfengzheng]").val(),
            jiazhao : $("input[name=jiazhao]").val(),
        },function(data){
            if(data.result == 1){
                window.location = "/kerenchaxun";
            }
        })
    });
</script>
